<div class="container">
  <h1 class="jumbotron">Welcome your URL Shortener! <%= @user.name %>!</h1>

  <form action="/users/<%= session[:id] %>/urls" method="post" class="form-inline">
  <div class="form-group">
    <input type="text" name="long_url" placeholder="give me long url" class="form-control">
    <input type="submit" value="Shorten Url" class="btn btn-primary">
  </div>
  </form>

  <% if flash[:notice].nil? == false %>
   <h4> Here is your new url:  <%= flash[:notice] %> </h4>
  <% end %>

   <% if @urls.nil? == false %>
   <table class="table table-striped table-bordered">
     <tr>
       <th> Long Url </th>
       <th> Short Url </th>
       <th> Hit Count </th>
     </tr>
     <% @urls.each do |url| %>
      <tr>
       <td> <%= url.long_url %> </td>
       <td> <%= url.short_url %> </td>
       <td> <%= url.clicks %> </td>
     </tr>
     <% end %>
   </table>
  <% end %>

  <a href="/users/<%= session[:id] %>/edit">Edit an Account</a>
  <a href="/users/logout">Logout</a>

</div>
